                  <Image url="@../Graphical_Assets/Eriantys_slider.jpg" />
               </image>
            </ImageView>
            <Label layoutX="555.0" layoutY="59.0" text="Select the wizard you want for the game :">
               <font>
                  <Font name="Book Antiqua" size="12.0" />
               </font>
            </Label>
            <ImageView fx:id="wizard1" fitHeight="184.0" fitWidth="117.0" layoutX="262.0" layoutY="97.0" onMouseClicked="#onWizardClick1" preserveRatio="true">
               <image>
                  <Image url="@../Graphical_Assets/Assistenti/retro/CarteTOT_back_1@3x.png" />
               </image>
            </ImageView>
            <ImageView fx:id="wizard2" fitHeight="177.0" fitWidth="117.0" layoutX="479.0" layoutY="97.0" onMouseClicked="#onWizardClick2">

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.client.view.gui.controllers.GuiChooseWizardAndColorController">
   <children>
      <AnchorPane fx:id="scenePane" layoutX="1.0" prefHeight="720.0" prefWidth="1280.0">
